{
  "id": "loan-storage",
  "name": "Loan Storage Module",
  "provides": [
    {
      "id": "loan-storage",
      "version": "1.0",
      "handlers": [
        {
          "methods": ["GET"],
          "pathPattern": "/loan-storage/loans",
          "permissionsRequired": ["loan-storage.loans.collection.get"]
        }, {
          "methods": ["GET"],
          "pathPattern": "/loan-storage/loans/{id}",
          "permissionsRequired": ["loan-storage.loans.item.get"]
        }, {
          "methods": ["POST"],
          "pathPattern": "/loan-storage/loans",
          "permissionsRequired": ["loan-storage.loans.item.post"]
        }, {
          "methods": ["PUT"],
          "pathPattern": "/loan-storage/loans/{id}",
          "permissionsRequired": ["loan-storage.loans.item.put"]
        }, {
          "methods": ["DELETE"],
          "pathPattern": "/loan-storage/loans/{id}",
          "permissionsRequired": ["loan-storage.loans.item.delete"]
        }, {
          "methods": ["DELETE"],
          "pathPattern": "/loan-storage/loans",
          "permissionsRequired": ["loan-storage.loans.collection.delete"]
        }
      ]
    },
    {
      "id": "_tenant",
      "version": "1.0",
      "interfaceType": "system",
      "handlers": [
        {
          "methods": ["POST"],
          "pathPattern": "/_/tenant"
        }, {
          "methods": ["DELETE"],
          "pathPattern": "/_/tenant"
        }
      ]
    }
  ],
  "permissionSets": [
    {
      "permissionName": "loan-storage.loans.collection.get",
      "displayName": "loan storage - get loan collection",
      "description": "get loan collection from storage"
    },
    {
      "permissionName": "loan-storage.loans.collection.delete",
      "displayName": "loan storage - delete entire loan collection",
      "description": "delete entire loan collection from storage"
    },
    {
      "permissionName": "loan-storage.loans.item.get",
      "displayName": "loan storage - get individual loan",
      "description": "get individual loan from storage"
    },
    {
      "permissionName": "loan-storage.loans.item.post",
      "displayName": "loan storage - create individual loan",
      "description": "create individual loan in storage"
    },
    {
      "permissionName": "loan-storage.loans.item.put",
      "displayName": "loan storage - modify loan",
      "description": "modify loan in storage"
    },
    {
      "permissionName": "loan-storage.loans.item.delete",
      "displayName": "loan storage - delete individual loan",
      "description": "delete individual loan from storage"
    },
    {
      "permissionName": "loan-storage.all",
      "displayName": "Loan storage module - all permissions",
      "description": "Entire set of permissions needed to use the loan storage module",
      "subPermissions": [
        "loan-storage.loans.collection.get",
        "loan-storage.loans.item.get",
        "loan-storage.loans.item.post",
        "loan-storage.loans.item.put",
        "loan-storage.loans.item.delete",
        "loan-storage.loans.collection.delete"
      ]
    }
  ]
}
